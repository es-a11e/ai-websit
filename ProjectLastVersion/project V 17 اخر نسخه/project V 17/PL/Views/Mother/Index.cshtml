@model IEnumerable<Mother>
@{
    ViewData["Title"] = "Index";
}

<section class="container">
    <a class="btn btn-outline-danger my-3" asp-action="Create">Add New Mother</a>
    <h1>Mothers</h1>
    @if (Model.Count() > 0)
    {
        <div class="row">
            <table class="w-100 ">
                <thead class="table table-striped table-hover bg-light mt-4  ">
                    <tr>
                        <td class="table table-striped table-hover bg-light mt-4">img</td>
                        <td class="table table-striped table-hover bg-light mt-4">National Id</td>
                        <td class="table table-striped table-hover bg-light mt-4">@Html.DisplayNameFor(p => p.Name)</td>
                        <td class="table table-striped table-hover bg-light mt-4">@Html.DisplayNameFor(p => p.PhoneNumber1)</td>
                        <td class="table table-striped table-hover bg-light mt-4">@Html.DisplayNameFor(p => p.PhoneNumber2)</td>
                        <td class="table table-striped table-hover bg-light mt-4">@Html.DisplayNameFor(p => p.HomePhoneNumber)</td>
                        <td class="table table-striped table-hover bg-light mt-4">@Html.DisplayNameFor(p => p.Gender)</td>
                        <td class="table table-striped table-hover bg-light mt-4">@Html.DisplayNameFor(p => p.AliveOrNo)</td>
                        <td class="table table-striped table-hover bg-light mt-4">@Html.DisplayNameFor(p => p.Address)</td>
                        <td class="table table-striped table-hover bg-light mt-4">@Html.DisplayNameFor(p => p.DateOfBirth)</td>
                       <td class="table table-striped table-hover bg-light mt-4">Detiels</td>
                        <td class="table table-striped table-hover bg-light mt-4">Edit</td>
                        <td class="table table-striped table-hover bg-light mt-4">Delete</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var entity in Model)
                    {
                        <tr>
                            <td>
                                <div class="text-center">
                                    <img src="~/Files/Mother_Images/@entity.ImageName" class="rounded w-75 h-auto  " alt="Mother_Images" />
                                </div>
                            </td>
                            <td class="text-center"> @entity.National_Mother_Id</td>
                            <td class="text-center"> @entity.Name</td>
                            <td class="text-center"> @entity.PhoneNumber1</td>
                            <td class="text-center"> @entity.PhoneNumber2</td>
                            <td class="text-center"> @entity.HomePhoneNumber</td>
                            <td class="text-center">
                                @if (entity.Gender == true)
                                {
                                    <p>Male </p>
                                }
                                else
                                {
                                    <p>Female </p>
                                }
                            </td>
                            <td class="text-center">
                                @if (entity.AliveOrNo == true)
                                {
                                    <p>Alive</p>
                                }
                                else
                                {
                                    <p>Dead</p>
                                }
                            </td>
                            <td class="text-center"> @entity.Address</td>
                            <td class="text-center"> @entity.DateOfBirth</td>
                           <td class="table table-striped table-hover bg-light mt-4">
                                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@entity.National_Mother_Id">Details</a>
                            </td>
                            <td class="table table-striped table-hover bg-light mt-4">
                                <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@entity.National_Mother_Id">Edit</a>
                            </td>
                            <td class="table table-striped table-hover bg-light mt-4">
                                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@entity.National_Mother_Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>

    }
    else
    {
        <h1 class="alert alert-danger">No Mothers</h1>
    }

</section>